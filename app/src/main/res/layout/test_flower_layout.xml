<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/bg_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/star_bg" />

    <ImageView
        android:id="@+id/flower_light"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/flower_2x" />

    <ImageView
        android:id="@+id/boom_fire"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dim_fire"/>
    <ImageView
        android:id="@+id/center_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/bright_fire" />

    <com.bayin.boom.bomb.ColorBallTextView
        android:id="@+id/ball_1"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <com.bayin.boom.bomb.ColorBallTextView
        android:id="@+id/ball_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:visibility="gone"
        android:layout_marginTop="30dp" />

    <com.bayin.boom.bomb.ColorBallTextView
        android:id="@+id/ball_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp" />

    <com.bayin.boom.bomb.ColorBallTextView
        android:id="@+id/ball_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp" />
</RelativeLayout>